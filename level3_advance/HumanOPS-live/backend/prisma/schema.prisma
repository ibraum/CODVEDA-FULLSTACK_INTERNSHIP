generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN_RH
  MANAGER
  COLLABORATOR
}

enum Workload {
  LOW
  NORMAL
  HIGH
}

enum Availability {
  AVAILABLE
  MOBILISABLE
  UNAVAILABLE
}

enum TensionLevel {
  LOW
  MODERATE
  HIGH
  CRITICAL
}

enum ReinforcementStatus {
  OPEN
  CLOSED
  EXPIRED
}

enum ReinforcementResponse {
  ACCEPTED
  REFUSED
  NO_RESPONSE
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  firstName    String?
  lastName     String?
  role         Role
  isActive     Boolean   @default(true)
  deletedAt    DateTime? // Soft delete

  profile           CollaboratorProfile?
  teamMember        TeamMember?
  managedTeams      Team[]                       @relation("TeamManager")
  humanState        HumanState?
  humanStateHistory HumanStateHistory[]
  reliability       ReliabilityScore?
  responses         ReinforcementResponseModel[]
  alerts            Alert[]
  rhSettingChanges  RHSettingHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([role])
  @@index([isActive])
  @@index([deletedAt])
}

model Team {
  id        String @id @default(uuid())
  name      String
  managerId String

  manager User @relation("TeamManager", fields: [managerId], references: [id])

  members  TeamMember[]
  tensions TensionLevelSnapshot[]
  requests ReinforcementRequest[]

  createdAt DateTime @default(now())
}

model TeamMember {
  id     String @id @default(uuid())
  userId String @unique
  teamId String

  user User @relation(fields: [userId], references: [id])
  team Team @relation(fields: [teamId], references: [id])

  joinedAt DateTime @default(now())

  @@index([teamId])
  @@index([userId])
}

model CollaboratorProfile {
  id          String @id @default(uuid())
  userId      String @unique
  preferences Json?

  user   User                @relation(fields: [userId], references: [id])
  skills CollaboratorSkill[]

  createdAt DateTime @default(now())
}

model Skill {
  id   String @id @default(uuid())
  name String @unique

  collaborators CollaboratorSkill[]
}

model CollaboratorSkill {
  id             String @id @default(uuid())
  collaboratorId String
  skillId        String

  collaborator CollaboratorProfile @relation(fields: [collaboratorId], references: [id])
  skill        Skill               @relation(fields: [skillId], references: [id])

  @@unique([collaboratorId, skillId])
}

model HumanState {
  id           String       @id @default(uuid())
  userId       String       @unique
  workload     Workload
  availability Availability

  user    User                @relation(fields: [userId], references: [id])
  history HumanStateHistory[]

  updatedAt DateTime @updatedAt

  @@index([userId])
}

model HumanStateHistory {
  id           String @id @default(uuid())
  userId       String
  humanStateId String

  previousState Json
  newState      Json

  user       User       @relation(fields: [userId], references: [id])
  humanState HumanState @relation(fields: [humanStateId], references: [id])

  changedAt DateTime @default(now())

  @@index([userId])
  @@index([changedAt])
}

model ReliabilityScore {
  id     String @id @default(uuid())
  userId String @unique
  score  Float

  user User @relation(fields: [userId], references: [id])

  calculatedAt DateTime @default(now())
}

model ReinforcementRequest {
  id             String              @id @default(uuid())
  teamId         String
  requiredSkills Json
  urgencyLevel   Int
  status         ReinforcementStatus @default(OPEN)
  expiresAt      DateTime // Date d'expiration automatique

  team      Team                         @relation(fields: [teamId], references: [id])
  responses ReinforcementResponseModel[]

  createdAt DateTime @default(now())

  @@index([status])
  @@index([expiresAt])
}

model ReinforcementResponseModel {
  id        String                @id @default(uuid())
  requestId String
  userId    String
  response  ReinforcementResponse

  request ReinforcementRequest @relation(fields: [requestId], references: [id])
  user    User                 @relation(fields: [userId], references: [id])

  respondedAt DateTime @default(now())

  @@unique([requestId, userId])
}

model TensionLevelSnapshot {
  id      String       @id @default(uuid())
  teamId  String
  level   TensionLevel
  metrics Json

  team Team @relation(fields: [teamId], references: [id])

  calculatedAt DateTime @default(now())
}

model Alert {
  id         String    @id @default(uuid())
  type       String
  targetRole Role? // Optionnel si ciblage individuel
  userId     String? // Destinataire spécifique
  isRead     Boolean   @default(false)
  readAt     DateTime?
  payload    Json

  user User? @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([targetRole])
  @@index([isRead])
  @@index([createdAt])
}

model RHSetting {
  id        String  @id @default(uuid())
  key       String  @unique
  value     Json
  updatedBy String? // Utilisateur qui a fait la modification

  history RHSettingHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
}

// Audit trail pour les modifications de paramètres RH
model RHSettingHistory {
  id        String @id @default(uuid())
  settingId String
  key       String
  oldValue  Json?
  newValue  Json
  changedBy String

  setting RHSetting @relation(fields: [settingId], references: [id])
  user    User      @relation(fields: [changedBy], references: [id])

  changedAt DateTime @default(now())

  @@index([settingId])
  @@index([changedBy])
  @@index([changedAt])
}
